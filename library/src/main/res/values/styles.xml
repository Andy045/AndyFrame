<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="HandyFrameAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- colorPrimary 应用的主要色调，Toolbar默认颜色，Button默认颜色 -->
        <item name="colorPrimary">@color/hd_themePrimary</item>

        <!-- colorPrimaryDark 应用的主要暗色调，statusBarColor默认颜色 -->
        <item name="colorPrimaryDark">@color/hd_themePrimaryDark</item>

        <!-- colorAccent CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色 -->
        <item name="colorAccent">@color/hd_themeAccent</item>

        <!-- EditText下划线 的默认颜色 -->
        <item name="colorControlNormal">@color/hd_themeSecondary</item>

        <!-- CheckBox RadioButton等控件 的选中颜色 -->
        <item name="colorControlActivated">@color/hd_themePrimary</item>

        <!-- ChexkBox RadioButton Switch等控件 的水波纹颜色 -->
        <item name="colorControlHighlight">@color/hd_themeSecondaryLight</item>

        <!-- Button文本颜色 -->
        <item name="colorOnPrimary">@color/hd_textWhite</item>

        <!-- statusBarColor 状态栏颜色，默认使用colorPrimaryDark -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/hd_themePrimaryDark
        </item>

        <!-- android:navigationBarColor 底部栏颜色 -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/hd_navigationBarColor
        </item>

        <!-- windowBackground 窗口背景颜色 -->
        <item name="android:windowBackground">@color/google_grey50</item>
    </style>

    <!-- Base activity theme. -->
    <style name="HandyFrameActivityTheme" parent="HandyFrameAppTheme">
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:exported">false</item>
        <item name="android:launchMode">standard</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
    </style>

    <style name="HandyFrameTitlebar" parent="HandyTitlebarTheme">
        <item name="hd_isTranslucentStatus">true</item>
        <item name="hd_statusbarBackgroundColor">@color/hd_themePrimaryDark</item>
        <item name="hd_titlebarBackground">@color/hd_themePrimary</item>
        <item name="hd_bottomLineHeight">@dimen/hd_dp0</item>
    </style>
</resources>
