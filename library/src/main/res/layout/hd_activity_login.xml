<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/hd_img_login_bg" />

    <com.andy.titlebar.Titlebar
        android:id="@+id/titlebar"
        style="@style/Widget.HandyFrame.Titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hd_statusbarBackgroundColor="@color/web_transparent"
        app:hd_titlebarBackground="@color/web_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hd_dp128"
            android:src="@drawable/hd_icon_login_person" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/google_spacing_xxlarge"
            android:layout_marginTop="@dimen/google_spacing_xxlarge"
            android:layout_marginEnd="@dimen/google_spacing_xxlarge"
            android:paddingStart="@dimen/google_spacing_least"
            android:paddingLeft="@dimen/google_spacing_least"
            android:text="@string/hd_login_hint_account"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/google_font_small" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/google_spacing_xxlarge"
            android:layout_marginEnd="@dimen/google_spacing_xxlarge"
            android:layout_marginBottom="@dimen/google_spacing_xxlarge"
            app:boxBackgroundColor="@color/hd_selector_login_edt_bg"
            app:endIconMode="clear_text"
            app:endIconTint="@color/google_grey600"
            app:startIconDrawable="@drawable/hd_icon_login_person">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/google_spacing_xxlarge"
            android:layout_marginEnd="@dimen/google_spacing_xxlarge"
            android:paddingStart="@dimen/google_spacing_least"
            android:paddingLeft="@dimen/google_spacing_least"
            android:text="@string/hd_login_hint_password"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/google_font_small" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/google_spacing_xxlarge"
            android:layout_marginEnd="@dimen/google_spacing_xxlarge"
            android:layout_marginBottom="@dimen/google_spacing_xxlarge"
            app:boxBackgroundColor="@color/hd_selector_login_edt_bg"
            app:endIconMode="clear_text"
            app:endIconTint="@color/google_grey600"
            app:startIconDrawable="@drawable/hd_icon_login_password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            style="@style/Widget.HandyFrame.Material.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/google_spacing_xxlarge"
            android:layout_marginEnd="@dimen/google_spacing_xxlarge"
            android:buttonTint="@color/hd_selector_login_chk"
            android:text="@string/hd_login_remember"
            android:textColor="@color/hd_selector_login_chk"
            android:textSize="@dimen/google_font_small" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/google_spacing_small"
            android:layout_marginRight="@dimen/google_spacing_small"
            android:layout_marginBottom="@dimen/google_spacing_least"
            android:padding="@dimen/google_font_small"
            android:text="@string/hd_login"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/google_font_medium"
            app:strokeColor="?attr/colorOnPrimary" />
    </LinearLayout>
</RelativeLayout>