<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hd_img_login_bg" />

    <com.andy.titlebar.Titlebar
        android:id="@+id/titlebar"
        style="@style/Widget.HandyFrame.Titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hd_mainText="登录"
        app:hd_statusbarBackgroundColor="@color/web_transparent"
        app:hd_titlebarBackground="@color/web_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>